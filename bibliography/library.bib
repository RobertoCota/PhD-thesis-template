journal = {J. Chem. Phys.},
number = {5},
pages = {2008},
title = {{On the role of dielectric friction in vibrational energy relaxation}},
url = {http://scitation.aip.org/content/aip/journal/jcp/111/5/10.1063/1.479469},
volume = {111},
year = {1999}
}
