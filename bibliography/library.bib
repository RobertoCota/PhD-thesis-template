@article{Elsaesser2009,
abstract = {Structural memory of aqueous systems, such as neat water and biomolecules, in an aqueous environment is strongly influenced by hydrogen bond dynamics. Vibrational spectroscopy in the femtosecond (fs) time domain is applied to map structural dynamics in real-time and identify underlying molecular interactions. Neat liquid water displays an ultrafast loss of structural memory with the fastest decay of structural correlations occurring in the sub-100 fs regime. Both OH stretching and bending excitations of water molecules decay on a subpicosecond time scale, followed by dissipation of excess energy in the hydrogen bond network within a few picoseconds. Water shells around fully hydrated DNA show similar although slightly slower dynamics. A detailed study of hydration shells around ionic phosphate groups in the DNA backbone demonstrates a strong phosphate-water coupling and a subpicosecond rearrangement of hydrogen bonds upon energy disposal. Hydration shells serve as primary heat sinks for excess energy. {\textcopyright} 2009 by Walter de Gruyter Berlin New York.},
author = {Elsaesser, Thomas},
doi = {10.1515/BC.2009.126},
issn = {14316730},
journal = {Biol. Chem.},
keywords = {Femtosecond infrared spectroscopy,Hydrated DNA,Hydrogen bond,Structural memory,Water},
number = {11},
pages = {1125--1132},
title = {{Ultrafast memory loss and relaxation processes in hydrogen-bonded systems}},
volume = {390},
year = {2009}
}
@article{Horne1966,
abstract = {Transport phenomena in water, such as ionic conduction and viscous flow, can be treated as rate processes and activation energies calculated by the method of Arrhenius. These activation energies are highly dependent on structural changes in liquid water. The rate-determining step for the mechanism of electrical conduction of aqueous solutions of strong 1:1 electrolytes is “hole” formation in the solvent. The process occurs in both the “free” monomeric water and in the rarified Frank-Wen clusters. The activation energy of this process exhibits a maximum at about 4°C and a minimum at about 2000 bars. Protons conduct largely by the Grotthuss mechanism in aqueous solution. At 1 atm the rate-determining step for this process is the rotation of H 2O, or of H 3O +, but this step is so facilitated by increasing pressure and thereby breaking-up the water structure that by about 1,500 bars the proton flip, possibly by quantum-mechanical tunnelling, becomes limiting. At 1 atm the Grotthuss mechanism is confined to the “free,” rotatable, water monomers. The activation energy of the process decreases with increasing pressure or increasing temperature. The activation energy of the viscous flow of water does not exhibit a maximum at 4°C; thus the mechanism of this process is probably some kind of rotational tumbling of the clusters through the “free” water rather than “hole” formation in the solvent. Highly hydrated species such as MgSO 4, too large to fit into the “holes,” may conduct by a similar mechanism. Studies of the Fe(II)Fe(III) electron exchange in mixed solvents and in ice have shown that electrons, like protons, can be transferred over great distances in water by the Grotthuss mechanism. The above transport processes play important roles in biological systems. On peut traiter comme des vitesses de processus et calculer des{\'{e}}nergies d'activation selon Arrh{\'{e}}nius certains ph{\'{e}}nom{\`{e}}nes de transport dans l'eau tels que la conduction conique 